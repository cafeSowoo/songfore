rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function roleDocPath(uid) {
      return /databases/$(database)/documents/roles/$(uid);
    }

    function hasRoleDoc() {
      return isSignedIn() && exists(roleDocPath(request.auth.uid));
    }

    function userRole() {
      if (!hasRoleDoc()) {
        return null;
      }

      return get(roleDocPath(request.auth.uid)).data.role;
    }

    function isMaster() {
      return isSignedIn() && userRole() == 'master';
    }

    function isAdmin() {
      return isSignedIn() && (userRole() == 'admin' || isMaster());
    }

    match /roles/{uid} {
      // 로그인한 사용자만 roles 문서를 읽을 수 있도록 허용 (요청한 샘플 규칙)
      allow read: if isSignedIn();
      // roles 문서 쓰기는 master만 허용
      allow write: if isMaster();
    }

    match /posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
