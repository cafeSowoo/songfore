rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function roleDocPath(uid) {
      return /databases/$(database)/documents/roles/$(uid);
    }

    function hasRoleDoc() {
      return exists(roleDocPath(request.auth.uid));
    }

    function userRole() {
      return get(roleDocPath(request.auth.uid)).data.role;
    }

    function isMaster() {
      return isSignedIn() && hasRoleDoc() && userRole() == 'master';
    }

    function isAdmin() {
      return isSignedIn() && hasRoleDoc() && (userRole() == 'admin' || isMaster());
    }

    match /roles/{uid} {
      allow read: if isSignedIn() && (request.auth.uid == uid || isMaster());
      allow create: if isMaster();
      allow update: if isSignedIn() && request.auth.uid == uid && request.resource.data.role == resource.data.role;
      allow delete: if isMaster();
    }

    match /posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
